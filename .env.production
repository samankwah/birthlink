# BirthLink Ghana - Production Environment Configuration
# Created: August 12, 2025
# Purpose: Phase 4 Production Deployment for Nationwide Rollout

# Firebase Configuration - PRODUCTION
VITE_FIREBASE_API_KEY=your_production_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=birthlink-ghana.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=birthlink-ghana
VITE_FIREBASE_STORAGE_BUCKET=birthlink-ghana.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_production_messaging_sender_id
VITE_FIREBASE_APP_ID=your_production_app_id

# Twilio Configuration - PRODUCTION
VITE_TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=your_production_twilio_phone_number

# Environment Configuration
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_DEMO_MODE=false
VITE_USE_FIREBASE_EMULATORS=false

# Analytics Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_CRASH_REPORTING=true
VITE_ENABLE_REMOTE_LOGGING=true

# Production Feature Flags
VITE_ENABLE_SMS_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA_FEATURES=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_PDF_CERTIFICATES=true
VITE_ENABLE_GOVERNMENT_INTEGRATION=true

# Production Configuration
VITE_PILOT_MODE=false
VITE_MAX_REGISTRATIONS_PER_DAY=1000
VITE_TARGET_REGIONS=all
VITE_FEEDBACK_COLLECTION_ENABLED=true

# Security & Compliance
VITE_SECURITY_AUDIT_PASSED=true
VITE_GDPR_COMPLIANT=true
VITE_GHANA_DATA_PROTECTION_ACT_COMPLIANT=true

# Scale Configuration
VITE_MAX_CONCURRENT_USERS=500
VITE_MAX_SYNC_BATCH_SIZE=100
VITE_CACHE_STRATEGY=aggressive

# Monitoring and Logging
VITE_LOG_LEVEL=warn
VITE_SENTRY_DSN=your_production_sentry_dsn_here
VITE_ERROR_REPORTING_ENDPOINT=https://api.birthlink-ghana.org/errors

# Support Configuration
VITE_SUPPORT_EMAIL=support@birthlink-ghana.gov.gh
VITE_SUPPORT_PHONE=+233200000000
VITE_HELP_DESK_URL=https://support.birthlink-ghana.gov.gh
VITE_GOVERNMENT_CONTACT=registrar-general@gov.gh

# Performance Optimization
VITE_CDN_URL=https://cdn.birthlink-ghana.gov.gh
VITE_API_BASE_URL=https://api.birthlink-ghana.gov.gh
VITE_ENABLE_SERVICE_WORKER_CACHE=true
VITE_ENABLE_PRELOAD_CRITICAL_RESOURCES=true

# Government Integration
VITE_GOVERNMENT_API_ENDPOINT=https://gov-api.birthlink-ghana.gov.gh
VITE_NATIONAL_ID_VALIDATION_ENDPOINT=https://nid-validate.gov.gh
VITE_CERTIFICATE_GENERATION_ENDPOINT=https://cert-gen.gov.gh
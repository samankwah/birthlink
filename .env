# Firebase Configuration - Replace with your actual Firebase project config
VITE_FIREBASE_API_KEY=demo-api-key
VITE_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=demo-birthlink
VITE_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Development Mode - Set to 'true' to use Firebase emulators (requires Firebase CLI)
VITE_USE_FIREBASE_EMULATORS=true

# Development Mode - Use mock authentication for demo/testing (fallback if emulators fail)
VITE_USE_MOCK_AUTH=false

# Application Configuration  
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0
VITE_PILOT_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SMS_NOTIFICATIONS=false

# BirthLink Ghana - Staging Environment Configuration
# Created: August 12, 2025
# Purpose: Phase 3 Pilot Testing Environment

# Firebase Configuration - STAGING
VITE_FIREBASE_API_KEY=your_staging_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=birthlink-ghana-staging.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=birthlink-ghana-staging
VITE_FIREBASE_STORAGE_BUCKET=birthlink-ghana-staging.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_staging_messaging_sender_id
VITE_FIREBASE_APP_ID=your_staging_app_id

# Twilio Configuration - STAGING
VITE_TWILIO_ACCOUNT_SID=your_staging_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_staging_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=your_staging_twilio_phone_number

# Environment Configuration
VITE_APP_ENV=staging
VITE_APP_VERSION=1.0.0-pilot
VITE_DEMO_MODE=false
VITE_USE_FIREBASE_EMULATORS=false

# Analytics Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_CRASH_REPORTING=true

# Feature Flags for Pilot Testing
VITE_ENABLE_SMS_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA_FEATURES=true
VITE_ENABLE_MULTI_LANGUAGE=true

# Pilot Testing Configuration
VITE_PILOT_MODE=true
VITE_MAX_REGISTRATIONS_PER_DAY=100
VITE_PILOT_DISTRICTS=Kumasi,Tamale,Accra
VITE_FEEDBACK_COLLECTION_ENABLED=true

# Monitoring and Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_REMOTE_LOGGING=true
VITE_SENTRY_DSN=your_sentry_dsn_here

# Support Configuration
VITE_SUPPORT_EMAIL=support@birthlink-ghana.org
VITE_SUPPORT_PHONE=+233123456789
VITE_HELP_DESK_URL=https://birthlink-ghana.freshdesk.com